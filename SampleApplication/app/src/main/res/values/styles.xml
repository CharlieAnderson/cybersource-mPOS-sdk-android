<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- My Visa theme. -->
    <!-- This theme is used for Android platforms prior to 5.0 -->
    <style name="VisaTheme" parent="AppTheme">
        <item name="colorPrimary">@color/background_light_blue</item>
        <item name="colorPrimaryDark">@color/visa_toolbar_dark_blue</item>
        <item name="colorAccent">@color/visa_golden_dark</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="floating_action_button_mini">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">-42dp</item>
    </style>

    <style name="VisaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="VisaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
